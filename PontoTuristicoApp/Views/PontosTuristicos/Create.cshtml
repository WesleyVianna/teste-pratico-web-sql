@model PontoTuristicoApp.Models.PontoTuristico

@{
    ViewData["Title"] = "Criar";
}

<h2>Cadastrar Ponto Tur√≠stico</h2>

<form asp-action="Create" method="POST">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Localizacao" class="form-label"></label>
        <input asp-for="Localizacao" class="form-control"></input>
        <span asp-validation-for="Localizacao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Estado</label>
        <select id="Estado" name="Estado" class="form-select">
            <option value="">Selecione um estado</option>
            @foreach (var estado in ViewBag.Estados)
            {
                <option value="@estado.Sigla">@estado.Nome</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Cidade</label>
        <select id="Cidade" name="Cidade" class="form-select" disabled>
            <option value="">Selecione uma cidade</option>
        </select>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-success">
            üíæ Salvar
        </button>

        <a asp-action="Index" class="btn btn-danger">
            ‚ùå Cancelar
        </a>
    </div>
</form>

<script>
    const estadoSelect = document.getElementById("Estado")
        || document.getElementById("estadoSelect");
    const cidadeSelect = document.getElementById("Cidade")
        || document.getElementById("cidadeSelect");

    estadoSelect.addEventListener("change", async function () {
        const estado = this.value;

        cidadeSelect.innerHTML = "";
        cidadeSelect.disabled = true;

        if (!estado) {
            cidadeSelect.innerHTML = '<option value="">Selecione uma cidade</option>';
            return;
        }

        // Loading visual
        cidadeSelect.innerHTML = '<option value="">üîÑ Carregando cidades...</option>';

        try {
            const response = await fetch(`/PontosTuristicos/GetCidades?estado=${estado}`);

            if (!response.ok) {
                throw new Error("Erro ao buscar cidades");
            }

            const data = await response.json();

            cidadeSelect.innerHTML = '<option value="">Selecione uma cidade</option>';

            if (data.length === 0) {
                cidadeSelect.innerHTML = '<option value="">Nenhuma cidade encontrada</option>';
                return;
            }

            data.forEach(cidade => {
                const option = document.createElement("option");
                option.value = cidade.nome;
                option.text = cidade.nome;
                cidadeSelect.appendChild(option);
            });

            cidadeSelect.disabled = false;

        } catch (error) {
            console.error(error);
            cidadeSelect.innerHTML =
                '<option value="">‚ùå Erro ao carregar cidades</option>';
        }
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}