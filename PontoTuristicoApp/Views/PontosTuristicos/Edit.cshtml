@model PontoTuristicoApp.Models.PontoTuristico

@{
    ViewData["Title"] = "Editar Ponto Turístico";
}

<h2>Editar Ponto Turístico</h2>

<form asp-action="Edit" method="POST" class="mt-3">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Localizacao" class="form-label"></label>
        <input asp-for="Localizacao" class="form-control" />
        <span asp-validation-for="Localizacao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Estado</label>
        <select asp-for="Estado" class="form-select" id="estadoSelect">
            <option value="">Selecione</option>

            @foreach (var estado in ViewBag.Estados)
            {
                <option value="@estado.Sigla">
                    @estado.Nome
                </option>
            }
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Cidade</label>
        <select asp-for="Cidade" class="form-select" id="cidadeSelect">
            <option value="">Selecione a cidade</option>
        </select>
        <span asp-validation-for="Cidade" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>

    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const estadoSelect = document.getElementById("estadoSelect");
        const cidadeSelect = document.getElementById("cidadeSelect");

        async function carregarCidades(estado, cidadeSelecionada = null) {
            if (!estado) return;

            cidadeSelect.innerHTML = '<option>Carregando...</option>';

            const response = await fetch(`/PontosTuristicos/GetCidades?estado=${estado}`);
            const cidades = await response.json();

            cidadeSelect.innerHTML = '<option value="">Selecione a cidade</option>';

            cidades.forEach(c => {
                const option = document.createElement("option");
                option.value = c.nome;
                option.text = c.nome;

                if (cidadeSelecionada && c.nome === cidadeSelecionada) {
                    option.selected = true;
                }

                cidadeSelect.appendChild(option);
            });
        }

        estadoSelect.addEventListener("change", () => {
            carregarCidades(estadoSelect.value);
        });

        // Carrega as cidades automaticamente ao abrir a tela
        window.addEventListener("load", () => {
            const estadoAtual = "@Model.Estado";
            const cidadeAtual = "@Model.Cidade";

            if (estadoAtual) {
                estadoSelect.value = estadoAtual;
                carregarCidades(estadoAtual, cidadeAtual);
            }
        });
    </script>
}